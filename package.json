{
    "name": "daka_admin_react",
    "version": "1.0.0",
    "description": "a react_admin_demo",
    "main": "index.js",
    "workspaces": [
        "src",
        "server"
    ],
    "private": true,
    "scripts": {
        "dev": "concurrently -n \"server,client\" \"yarn run server\" \"yarn client:dev\"",
        "prod": "concurrently -n \"server,client\" \"yarn run server\" \"yarn client:prod\"",
        "client:dev": "cd src && yarn run dev",
        "client:prod": "cd src && yarn run prod",
        "server": "cd server && yarn run server"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix --color",
            "git add"
        ],
        "scripts/**/*.js": [
            "eslint --fix --color",
            "git add"
        ],
        "*.less": [
            "stylelint --fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "commitlint": "^13.1.0",
        "cross-env": "^7.0.3",
        "eslint": "^7.29.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^6.0.0",
        "prettier": "^2.3.1",
        "stylelint": "^13.13.1",
        "stylelint-config-standard": "^22.0.0",
        "typescript": "^4.3.4"
    },
    "dependencies": {}
}
